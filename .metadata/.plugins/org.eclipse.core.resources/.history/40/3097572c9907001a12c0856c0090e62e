#include "Indice2D.h"
#include "Indice1D.h"
#include "cudaTools.h"
#include <stdio.h>

/*----------------------------------------------------------------------*\
 |*			Declaration 					*|
 \*---------------------------------------------------------------------*/

/*--------------------------------------*\
 |*		Imported	 	*|
 \*-------------------------------------*/

/*--------------------------------------*\
 |*		Public			*|
 \*-------------------------------------*/

__global__ void kernelHistogramme(unsigned char *tabDataGM);

/*--------------------------------------*\
 |*		Private			*|
 \*-------------------------------------*/

/*----------------------------------------------------------------------*\
 |*			Implementation 					*|
 \*---------------------------------------------------------------------*/

/*--------------------------------------*\
 |*		Public			*|
 \*-------------------------------------*/

__global__ void kernelHistogramme(int *tabDataGM, int *tabFrequenceGM, int n, int dataMax)
    {
    extern __shared__ int tabSM[];
    clearTabSM(tabSM, dataMax);
    __syncthreads();
    reductionIntraThreadSM(tabSM, tabDataGM, n);
    __syncthreads();
    reductionInterBlock(tabSM, tabFrequenceGM, dataMax);
    }

/*----------------------------------------------------------------------*\
 |*			End	 					*|
 \*---------------------------------------------------------------------*/
