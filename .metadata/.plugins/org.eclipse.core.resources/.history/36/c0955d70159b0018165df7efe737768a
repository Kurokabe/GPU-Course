#include <iostream>

#include "Bench.h"

using std::cout;
using std::cerr;
using std::endl;

/*----------------------------------------------------------------------*\
 |*			Declaration 					*|
 \*---------------------------------------------------------------------*/

/*--------------------------------------*\
 |*		Public			*|
 \*-------------------------------------*/

/*--------------------------------------*\
 |*		Private			*|
 \*-------------------------------------*/

static void useBench(int w, int h);

/*----------------------------------------------------------------------*\
 |*			Implementation 					*|
 \*---------------------------------------------------------------------*/

/*--------------------------------------*\
 |*		Public			*|
 \*-------------------------------------*/

void useBench()
    {
    useBench(1920, 1080);
    useBench(648, 486);
    useBench(640, 360);
    }

/*--------------------------------------*\
 |*		Private			*|
 \*-------------------------------------*/

void useBench(int w, int h)
    {
    int nbIteration = 60*10;

    Bench bench(w, h, nbIteration);
    int fps = bench.run();

    cout << bench << endl;
    }

/*----------------------------------------------------------------------*\
 |*			End	 					*|
 \*---------------------------------------------------------------------*/

