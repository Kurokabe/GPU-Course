
#include <iostream>
#include "Grid.h"
#include "Device.h"
#include "LimitsTools.h"
#include "MathTools.h"

#include "host/Histogramme.h"
#include "host/DataCreator.h"

using std::cout;
using std::endl;

/*----------------------------------------------------------------------*\
 |*			Declaration 					*|
 \*---------------------------------------------------------------------*/

/*--------------------------------------*\
 |*		Public			*|
 \*-------------------------------------*/

__host__ bool isHistogrammeOK();
__host__ bool isHistogrammeOK(const Grid& grid);


/*----------------------------------------------------------------------*\
 |*			Implementation 					*|
 \*---------------------------------------------------------------------*/

/*--------------------------------------*\
 |*		Public			*|
 \*-------------------------------------*/

/**
 * On passse la grille à useAddVecteur pour pouvoir facilement la faire varier de l'extérieur pour trouver l'optimum, ou faire des tests avec des grilles différentes
 * Contrainte : grid :  puissance de 2 pour etre compatible avec la version naivePlus
 */
bool isHistogrammeOK(const Grid& grid)
    {

    int dataMax=255 ;
    DataCreator dataCreator(dataMax) ;
    int* tabData = dataCreator.getTabData();
    int n= dataCreator.getLength();

    int tabFrequence[256];

    Histogramme histogramme(grid, n, tabData, tabFrequence);
    histogramme.run();

    //bool isOk = MathTools::isEquals((double) piHat, PI, 1e-4);
    //cout << "Valeur de PI: " << piHat << " , isok?: " << isOk << endl;
    return true;
    }

bool isHistogrammeOK()
    {
    bool isOk = true;
    dim3 dg = dim3(1,1,1);
    dim3 db = dim3(2, 1, 1);
    Grid grid(dg, db);
    for(int i = 16; i<=64; ++i) //Démarrage à 16 afin d'avoir des tests assez rapides
	{
	dg.x = i;
	grid.dg = dg;
	for(int j = 4; j<=1024; j*=2)
	    {
	    db.x = j;
	    grid.db = db;
	    cout << grid << endl;
	    isOk &= isHistogrammeOK(grid);
	    }
	}
    return isOk;
    }

/*----------------------------------------------------------------------*\
 |*			End	 					*|
 \*---------------------------------------------------------------------*/
