Constructeur
*|
\*-------------------------------------*/
DataCreator::DataCreator(int dataMax)
{
assert(dataMax >= 2);
// Input
this->dataMax=dataMax;
// Tools
this->n = dataMax*(dataMax+1)/2;
this->nbMelange = n*10; // disons
this->tabData = new int[n];
createDataTriangulaire();
melangerData();
}
DataCreator::~DataCreator()
{
delete[] tabData;
}
